<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/event_card_height"
    android:background="@drawable/event_card_background"
    android:layout_marginBottom="@dimen/event_card_margin"
    android:contentDescription="@string/content_description_event_card">

    <!-- Left border for status indication -->
    <View
        android:id="@+id/statusBorder"
        android:layout_width="@dimen/event_card_border_width"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:background="@color/event_card_border_upcoming" />

    <!-- Badge for event status -->
    <TextView
        android:id="@+id/statusBadge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:background="@drawable/badge_background"
        android:text="@string/badge_today"
        android:textColor="@color/badge_text"
        android:textSize="@dimen/badge_text_size"
        android:textStyle="bold"
        android:paddingHorizontal="@dimen/badge_padding_horizontal"
        android:paddingVertical="@dimen/badge_padding_vertical"
        android:layout_marginEnd="@dimen/event_card_padding"
        android:visibility="visible" />

    <!-- Event content -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toStartOf="@id/statusBadge"
        android:layout_toEndOf="@id/statusBorder"
        android:orientation="vertical"
        android:paddingStart="@dimen/event_card_padding"
        android:paddingEnd="@dimen/spacing_small"
        android:paddingVertical="@dimen/spacing_small"
        android:gravity="center_vertical">

        <!-- Event title -->
        <TextView
            android:id="@+id/eventTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Event Title"
            android:textColor="@color/widget_text_primary"
            android:textSize="@dimen/event_title_text_size"
            android:textStyle="bold"
            android:ellipsize="end"
            android:maxLines="1" />

        <!-- Event details (time and location) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/spacing_tiny">

            <TextView
                android:id="@+id/eventTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10:00"
                android:textColor="@color/widget_text_secondary"
                android:textSize="@dimen/event_subtitle_text_size" />

            <TextView
                android:id="@+id/eventSeparator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/event_time_separator"
                android:textColor="@color/widget_text_muted"
                android:textSize="@dimen/event_subtitle_text_size"
                android:visibility="gone" />

            <TextView
                android:id="@+id/eventLocation"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/widget_text_secondary"
                android:textSize="@dimen/event_subtitle_text_size"
                android:ellipsize="end"
                android:maxLines="1"
                android:visibility="gone" />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
