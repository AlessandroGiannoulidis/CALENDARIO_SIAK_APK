<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/widget_background"
    android:padding="@dimen/widget_padding">

    <!-- Header with title and event count -->
    <LinearLayout
        android:id="@+id/widget_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="@dimen/spacing_medium">

        <TextView
            android:id="@+id/widgetTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/widget_title"
            android:textColor="@color/widget_text_primary"
            android:textSize="@dimen/widget_title_text_size"
            android:textStyle="bold"
            android:fontFamily="sans-serif-medium"
            android:gravity="start|center_vertical" />

        <TextView
            android:id="@+id/eventCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0 eventi"
            android:textColor="@color/widget_text_secondary"
            android:textSize="@dimen/event_subtitle_text_size"
            android:fontFamily="sans-serif"
            android:layout_marginStart="@dimen/spacing_medium" />

    </LinearLayout>

    <!-- Events container -->
    <LinearLayout
        android:id="@+id/eventsContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/widget_header"
        android:orientation="vertical"
        android:layout_above="@id/widget_footer_container" />

    <!-- Empty state -->
    <LinearLayout
        android:id="@+id/emptyState"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/widget_header"
        android:layout_above="@id/widget_footer_container"
        android:orientation="vertical"
        android:gravity="center"
        android:visibility="gone"
        android:minHeight="80dp">

        <TextView
            android:id="@+id/emptyStateText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/widget_no_events"
            android:textColor="@color/widget_text_muted"
            android:textSize="@dimen/event_title_text_size"
            android:gravity="center" />

    </LinearLayout>

    <!-- Footer with buttons and update time -->
    <LinearLayout
        android:id="@+id/widget_footer_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="@dimen/spacing_medium">

        <!-- Reset and Refresh buttons -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/resetButton"
                android:layout_width="@dimen/button_size"
                android:layout_height="@dimen/button_size"
                android:background="@drawable/button_reset_background"
                android:text="@string/button_reset"
                android:textColor="@color/button_text"
                android:textSize="@dimen/badge_text_size"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_marginEnd="@dimen/spacing_small"
                android:contentDescription="@string/content_description_reset"
                android:clickable="true"
                android:focusable="true" />

            <TextView
                android:id="@+id/refreshButton"
                android:layout_width="@dimen/button_size"
                android:layout_height="@dimen/button_size"
                android:background="@drawable/button_refresh_background"
                android:text="@string/button_refresh"
                android:textColor="@color/button_text"
                android:textSize="16sp"
                android:gravity="center"
                android:contentDescription="@string/content_description_refresh"
                android:clickable="true"
                android:focusable="true" />

        </LinearLayout>

        <!-- Footer text -->
        <TextView
            android:id="@+id/widgetFooter"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/widget_loading"
            android:textColor="@color/widget_text_muted"
            android:textSize="@dimen/widget_footer_text_size"
            android:gravity="end|center_vertical"
            android:layout_marginStart="@dimen/spacing_medium" />

    </LinearLayout>

</RelativeLayout>
